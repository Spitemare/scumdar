{
    "manifest_version": 2,
    "name": "Scumdar",
    "version": "1.1",
    "description": "Handy stuff for mafia on MTG Salvation",
    "permissions": [ "tabs" ],
    "icons": {
      "128": "img/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [ "js/jquery-1.7.2.min.js", "js/content.js" ],
            "css": [ "css/content.css" ],
            "matches": [ "http://forums.mtgsalvation.com/*" ]
        }
    ],
    "background": {
        "scripts": [ "js/jquery-1.7.2.min.js", "js/background.js" ]
    },
    "page_action": {
        "default_title": "Scumdar",
        "default_icon": "img/icon-16.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "img/star.png",
        "img/unstar.png",
        "img/arrow_down.png",
        "img/plus.png",
        "img/minus.png"
    ]
}
