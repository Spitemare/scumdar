{
    "manifest_version": 2,
    "name": "Scumdar",
    "version": "2.2",
    "description": "Handy stuff for mafia on MTG Salvation",
    "permissions": [ "tabs", "storage" ],
    "icons": {
      "128": "img/icon-128.png",
      "48": "img/icon-48.png",
      "16": "img/icon-16.png"
    },
    "content_scripts": [
        {
            "js": [ "js/jquery-1.7.2.min.js", "js/jquery-ui-1.10.2.custom.min.js", "js/waypoints.min.js", "js/content.js" ],
            "css": [ "css/jquery-ui-1.10.2.custom.min.css", "css/content.css" ],
            "matches": [ "http://forums.mtgsalvation.com/*", "http://forums.mtgdarkness.com/*" ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "img/star.png",
        "img/unstar.png",
        "img/plus.png",
        "img/minus.png",
        "img/pin.png",
        "img/unpin.png",
        "img/info.png"
    ]
}
